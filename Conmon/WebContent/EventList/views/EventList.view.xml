		<Table id="idStudentTable" items="{path: '/'}">
          <columns>
            <Column>
              <Text text="故障代码描述" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
              <Text text="故障代码编号" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
              <Text text="预警算法" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
              <Text text="创建者" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
              <Text text="创建日期" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Input value="{name}"   editable="false"></Input>
                <Input value="{number}" editable="false"></Input>   
                <Input value="{gender}" editable="false"></Input>   
